<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Loan Ledger</title>
    <style>
        table {
            border-collapse: collapse;
            border-color: black;
            border: 1px solid rgb(146, 143, 143);
            width: 100%;
            font-family: Arial, Helvetica, sans-serif;
            font-size: small;
        }

        th,
        td {
            text-align: left;
            padding: 8px;
            border-bottom: 1 px solid #cac9c9;
        }

        th {
            background-color: #268503;
            color: white;
        }

        tr:hover {
            background-color: #a1eb8e;
        }

        tr {
            border: 1px solid #cac9c9;
        }
    </style>
</head>

<body>
    <h1>Loan Ledger</h1>
    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Loan Number</th>
                <th>Payment Amount</th>
                <th>Interest</th>
                <th>Principal</th>
            </tr>
        </thead>
        <tbody>
            <% loanledger.forEach(function(loan) { %>
                <tr>
                    <td><%= loan.customerID %></td>
                    <td><%= loan.loanNumber %></td>
                    <td><%= loan.paymentAmount.toLocaleString('en-US', {
                        style: 'currency',
                        currency: 'USD',
                        minimumFractionDigits: 2
                      }) %></td>
                    <td><%= loan.interest.toLocaleString('en-US', {
                        style: 'currency',
                        currency: 'USD',
                        minimumFractionDigits: 2
                      }) %></td>
                    <td><%= loan.principal.toLocaleString('en-US', {
                        style: 'currency',
                        currency: 'USD',
                        minimumFractionDigits: 2
                      }) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>

</html>