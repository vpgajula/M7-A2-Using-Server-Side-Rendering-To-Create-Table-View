<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Customers</title>
    <style>
        table {
            border-collapse: collapse;
            border-color: black;
            border: 1px solid rgb(146, 143, 143);
            width: 100%;
            font-family: Arial, Helvetica, sans-serif;
            font-size: small;
        }

        th,
        td {
            text-align: left;
            padding: 8px;
            border-bottom: 1 px solid #cac9c9;
        }

        th {
            background-color: #268503;
            color: white;
        }

        tr:hover {
            background-color: #a1eb8e;
        }

        tr {
            border: 1px solid #cac9c9;
        }
    </style>
</head>

<body>
    <h1>Customers</h1>
    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>User Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            <% customer.forEach(function(cm) { %>
                <tr>
                    <td><%= cm.customerID %></td>
                    <td><%= cm.customerFirstName + ' ' + cm.customerMiddleName + ' ' + cm.customerLastName %></td>
                    <td><%= cm.userName %></td>
                    <td><%= cm.dateofBirth.toLocaleDateString('en-US') %></td>
                    <td><%= cm.gender %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>

</html>